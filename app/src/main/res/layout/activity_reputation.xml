<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_10dp"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardElevation="@dimen/size_2dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/act_rep_tv_display_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/display_name"
                android:textSize="@dimen/textSize_20sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/act_rep_iv_profile_image"
                    android:layout_width="@dimen/size_100dp"
                    android:layout_height="@dimen/size_100dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/sof_default_image"
                    android:contentDescription="@string/content_description"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:layout_marginBottom="@dimen/size_10dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/act_rep_tv_reputation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_5dp"
                        android:layout_marginEnd="@dimen/size_10dp"
                        android:textColor="@color/reputation_total"
                        android:textSize="@dimen/textSize_14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/reputation"
                        android:textColor="@color/reputation_label"
                        android:textSize="@dimen/textSize_14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/size_10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/act_rep_ll_gold_badges"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_10dp"
                        android:background="@drawable/bg_badges_gold"
                        android:orientation="horizontal"
                        android:padding="@dimen/size_5dp">

                        <ImageView
                            android:layout_width="@dimen/size_8dp"
                            android:layout_height="@dimen/size_8dp"
                            android:layout_gravity="center_vertical"
                            android:contentDescription="@string/content_description"
                            android:scaleType="fitCenter"
                            android:src="@drawable/gold_badges" />

                        <TextView
                            android:id="@+id/act_rep_tv_gold_badges"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/size_2dp"
                            android:layout_marginEnd="@dimen/size_5dp"
                            android:textColor="@color/badges"
                            android:textSize="@dimen/textSize_14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/act_rep_ll_silver_badges"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_5dp"
                        android:layout_marginEnd="@dimen/size_5dp"
                        android:background="@drawable/bg_badges_silver"
                        android:orientation="horizontal"
                        android:padding="@dimen/size_5dp">

                        <ImageView
                            android:layout_width="@dimen/size_8dp"
                            android:layout_height="@dimen/size_8dp"
                            android:layout_gravity="center_vertical"
                            android:contentDescription="@string/content_description"
                            android:scaleType="fitCenter"
                            android:src="@drawable/silver_badges" />

                        <TextView
                            android:id="@+id/act_rep_tv_silver_badges"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/size_2dp"
                            android:layout_marginEnd="@dimen/size_5dp"
                            android:textColor="@color/badges"
                            android:textSize="@dimen/textSize_14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/act_rep_ll_bronze_badges"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/size_10dp"
                        android:background="@drawable/bg_badges_bronze"
                        android:orientation="horizontal"
                        android:padding="@dimen/size_5dp">

                        <ImageView
                            android:layout_width="@dimen/size_8dp"
                            android:layout_height="@dimen/size_8dp"
                            android:layout_gravity="center_vertical"
                            android:contentDescription="@string/content_description"
                            android:scaleType="fitCenter"
                            android:src="@drawable/bronze_badges" />

                        <TextView
                            android:id="@+id/act_rep_tv_bronze_badges"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/size_2dp"
                            android:textColor="@color/badges"
                            android:textSize="@dimen/textSize_14sp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/act_rep_ll_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/size_20dp"
                    android:layout_height="@dimen/size_20dp"
                    android:layout_marginEnd="@dimen/size_5dp"
                    android:contentDescription="@string/content_description"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_location" />

                <TextView
                    android:id="@+id/act_rep_tv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/location"
                    android:textSize="@dimen/textSize_14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/size_20dp"
                    android:layout_height="@dimen/size_20dp"
                    android:layout_marginEnd="@dimen/size_5dp"
                    android:contentDescription="@string/content_description"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_last_access" />

                <TextView
                    android:id="@+id/act_rep_tv_last_access_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/location"
                    android:textSize="@dimen/textSize_14sp" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_10dp"
        android:text="@string/reputation_history"
        android:textColor="@color/reputation_label"
        android:textSize="@dimen/textSize_14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1dp"
        android:background="@color/location" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/act_rep_srl_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/act_rep_rv_reputation_history"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="true"
            android:dividerHeight="@dimen/size_1dp"
            android:overScrollMode="never" />
    </android.support.v4.widget.SwipeRefreshLayout>

    <ProgressBar
        android:id="@+id/act_rep_pb_loadmore"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50dp"
        android:background="@android:color/transparent"
        android:visibility="gone" />


</LinearLayout>
