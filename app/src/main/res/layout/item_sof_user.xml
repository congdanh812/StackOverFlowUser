<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/item_sof_user_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardElevation="@dimen/size_2dp"
    card_view:cardUseCompatPadding="true"
    android:layout_margin="@dimen/size_5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10dp"
                android:layout_marginBottom="@dimen/size_10dp"
                android:layout_marginStart="@dimen/size_5dp">

                <ImageView
                    android:id="@+id/item_sof_user_iv_profile_image"
                    android:layout_width="@dimen/size_84dp"
                    android:layout_height="@dimen/size_84dp"
                    android:src="@drawable/sof_default_image"
                    android:contentDescription="@string/content_description"/>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_sof_user_tv_display_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_2dp"
                    android:layout_marginEnd="@dimen/size_40dp"
                    android:textColor="@color/display_name"
                    android:textSize="@dimen/textSize_20sp" />

                <LinearLayout
                    android:id="@+id/item_sof_user_ll_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/size_2dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/size_20dp"
                        android:layout_height="@dimen/size_20dp"
                        android:layout_marginEnd="@dimen/size_5dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_location"
                        android:contentDescription="@string/content_description"/>

                    <TextView
                        android:id="@+id/item_sof_user_tv_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textSize="@dimen/textSize_14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/size_2dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/size_20dp"
                        android:layout_height="@dimen/size_20dp"
                        android:layout_marginEnd="@dimen/size_5dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_reputation"
                        android:contentDescription="@string/content_description"/>

                    <TextView
                        android:id="@+id/item_sof_user_tv_reputation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/size_8dp"
                        android:textSize="@dimen/textSize_14sp"
                        android:textColor="@color/location"/>

                    <ImageView
                        android:id="@+id/item_sof_user_iv_gold_badges"
                        android:layout_width="@dimen/size_8dp"
                        android:layout_height="@dimen/size_8dp"
                        android:layout_gravity="center_vertical"
                        android:scaleType="fitCenter"
                        android:src="@drawable/gold_badges"
                        android:contentDescription="@string/content_description"/>

                    <TextView
                        android:id="@+id/item_sof_user_tv_gold_badges"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_2dp"
                        android:layout_marginEnd="@dimen/size_5dp"
                        android:textSize="@dimen/textSize_14sp" />

                    <ImageView
                        android:id="@+id/item_sof_user_iv_silver_badges"
                        android:layout_width="@dimen/size_8dp"
                        android:layout_height="@dimen/size_8dp"
                        android:layout_gravity="center_vertical"
                        android:scaleType="fitCenter"
                        android:src="@drawable/silver_badges"
                        android:contentDescription="@string/content_description"/>

                    <TextView
                        android:id="@+id/item_sof_user_tv_silver_badges"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_2dp"
                        android:layout_marginEnd="@dimen/size_5dp"
                        android:textSize="@dimen/textSize_14sp" />

                    <ImageView
                        android:id="@+id/item_sof_user_iv_bronze_badges"
                        android:layout_width="@dimen/size_8dp"
                        android:layout_height="@dimen/size_8dp"
                        android:layout_gravity="center_vertical"
                        android:scaleType="fitCenter"
                        android:src="@drawable/bronze_badges"
                        android:contentDescription="@string/content_description"/>

                    <TextView
                        android:id="@+id/item_sof_user_tv_bronze_badges"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_2dp"
                        android:textSize="@dimen/textSize_14sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/size_2dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/size_20dp"
                        android:layout_height="@dimen/size_20dp"
                        android:layout_marginEnd="@dimen/size_5dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_last_access"
                        android:contentDescription="@string/content_description"/>

                    <TextView
                        android:id="@+id/item_sof_user_tv_last_access_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textSize="@dimen/textSize_14sp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/item_sof_user_iv_bookmark"
            android:layout_width="@dimen/size_30dp"
            android:layout_height="@dimen/size_40dp"
            android:scaleType="fitCenter"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/content_description"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>