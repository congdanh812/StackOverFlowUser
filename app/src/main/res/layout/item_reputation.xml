<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/item_reputation_tv_change"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:text="+15"
        android:textColor="@android:color/darker_gray"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/item_reputation_tv_create_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:text="2 hours ago"
        android:textColor="#bbc0c4"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/item_reputation_tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:text="upvote"
        android:textColor="#6a737c"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/item_reputation_tv_post_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123123"
        android:textColor="#1279c9"
        android:textSize="15sp"
        android:singleLine="true"
        android:ellipsize="marquee"/>

</LinearLayout>