<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dc.danh.sofuser">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".controller.SOFApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_sof_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_sof_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.screens.HomeActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.screens.ReputationActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>